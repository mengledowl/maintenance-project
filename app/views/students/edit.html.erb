<h1>Edit Student</h1>

<%= link_to 'back', :back %>

<%= form_for @student do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label "First name *" %>
    <%= f.text_field :first_name %>

    <%= f.label 'Last name *' %>
    <%= f.text_field :last_name %>

    <%= f.label :middle_name %>
    <%= f.text_field :middle_name %>

    <%= f.label :preferred_name %>
    <%= f.text_field :preferred_name %>

    <br/><br/>

    <%= f.label 'Social Security # *' %>
    <%= f.text_field :ssn %>

    <br/>
    <hr/>
    <br/>

    <%= f.label 'Date of birth *' %>
    <%= f.date_select :date_of_birth, start_year: 1900, end_year: 2015, include_blank: true %>

    <%= f.label 'Place of birth *' %>
    <%= f.text_field :place_of_birth %>

    <br/>
    <hr/>
    <br/>

    <%= f.label :arkansas_resident? %><br/>
    <%= f.check_box :arkansas_resident %>

    <br/>
    <hr/>
    <br/>

    <%= f.label 'Cell phone *' %>
    <%= f.text_field :cell_phone %>

    <%= f.label :work_phone %>
    <%= f.text_field :work_phone %>

    <%= f.label 'Email *' %>
    <%= f.text_field :email %>

    <br/><br/>

    <%= f.label :current_employer %>
    <%= f.text_field :current_employer %>

    <%= f.label :length_of_employment %>
    <%= f.text_field :length_of_employment %>

    <br/>
    <hr/>
    <br/>

    <%= f.label :race %>
    <%= f.text_field :race %>

    <%= f.label :gender %>
    <%= f.select :gender, gender_options, { include_blank: true }, selected: @student.gender %>

    <br/>
    <hr/>
    <br/>

    <%= f.label 'US Citizenship' %><br/>
    <%= f.check_box :citizenship %><br/>

    <%= f.label :visa_type %>
    <%= f.text_field :visa_type %>

    <%= f.label :country_of_citizenship %>
    <%= f.text_field :country_of_citizenship %>

    <br/>
    <hr/>
    <br/>

    <%= f.label 'Requested admission year *' %>
    <%= f.select :requested_admission_year, year_options(Time.now.year, 5.years.from_now.year), include_blank: true %>

    <%= f.label 'MIS program type *' %>
    <%= f.text_field :mis_program_type %>

    <br/>
    <hr/>
    <br/>

    <%= f.label :past_applicant %><br/>
    <%= f.check_box :past_applicant %><br/>

    <%= f.label :past_application_date %>
    <%= f.date_select :past_application_date, end_year: 2015, include_blank: true %>

    <br/>
    <hr/>
    <br/>

    <%= f.label :past_enrollment %><br/>
    <%= f.check_box :past_enrollment %><br/>

    <%= f.label :past_enrollment_date %>
    <%= f.date_select :past_enrollment_date, end_year: 2015, include_blank: true %>

    <%= f.label :enrollment_type %>
    <%= f.text_field :enrollment_type %>

    <br/>
    <hr/>
    <br/>

    <%= f.label :gmat_date %>
    <%= f.date_select :gmat_date, end_year: 2015, include_blank: true %>

    <%= f.label :gmat_score %>
    <%= f.text_field :gmat_score %>

    <%= f.label :toefl_date %>
    <%= f.date_select :toefl_date, end_year: 2015, include_blank: true %>

    <%= f.label :toefl_score %>
    <%= f.text_field :toefl_score %>

    <br/>
    <hr/>
    <br/>

    <%= f.label :status %>
    <%= f.select :status, options_for_select(application_statuses) %>

    <br/>
    <hr/>
    <br/>

    <%= f.label :alumni %><br/>
    <%= f.check_box :alumni %>

    <br/><br/>

    <%= f.label :comments %>
    <%= f.text_area :comments %>

    <br/>
    <hr/>
    <br/>

    <h3>Addresses:</h3>

    <%= f.fields_for :addresses do |address| %>
        <%= address.label :type %>
        <%= address.select :kind, options_for_select(address_types) %>

        <br/>

        <%= address.label :address_line_1 %>
        <%= address.text_field :address_line_1 %>

        <br/>

        <%= address.label :address_line_2 %>
        <%= address.text_field :address_line_2 %>

        <br/>

        <%= address.label :city %>
        <%= address.text_field :city %>

        <br/>

        <%= address.label :state %>
        <%= address.text_field :state %>

        <br/>

        <%= address.label :country %>
        <%= address.text_field :country %>

        <br/><br/>
    <% end %>

    <br/>

    <h3>Colleges</h3>

    <%= f.nested_fields_for :colleges do |college| %>
        <%= college.label :college_attended %>
        <%= college.text_field :college_attended %>

        <br/>

        <%= college.label :dates_attended %>
        <%= college.text_field :dates_attended %>

        <br/>

        <%= college.label :gpa %>
        <%= college.text_field :gpa %>

        <br/>

        <%= college.label :semester_hours %>
        <%= college.text_field :semester_hours, placeholder: 'Integers only' %>

        <br/>

        <%= college.label :degree_major %>
        <%= college.text_field :degree_major %>

        <br/>

        <%= college.label :current_employment_hours %>
        <%= college.text_field :current_employment_hours, placeholder: 'Integers only' %>

        <br/>

        <%= college.remove_nested_fields_link 'Remove' %>
    <% end %>

    <%= f.add_nested_fields_link :colleges, 'Add College' %>

    <br/><br/>

    <%= f.submit 'Save and continue' %>

<% end %>